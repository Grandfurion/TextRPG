                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewInventory6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewInventory7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
